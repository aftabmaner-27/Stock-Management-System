<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySMS" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="smsGridEditTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/grid_textbox_style</item>
    </style>


    <style name="smsCommonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_common_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLength">150</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>