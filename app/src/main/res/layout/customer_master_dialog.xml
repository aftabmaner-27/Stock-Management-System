<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sms_color_third_blue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Customer Master"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                />


            <ImageView
                android:id="@+id/btnClosePopup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_close_24"
                app:tint="@color/white" />
        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/common_ui">


        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/Customer_Name"
                    style="@style/smsGridEditTextField"
                    android:layout_marginBottom="10dp"
                    android:hint="Customer Name" />

                <EditText
                    android:id="@+id/Customer_Address"
                    style="@style/smsGridEditTextField"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:hint="Address" />

                <EditText
                    android:id="@+id/Customer_GSTno"
                    style="@style/smsGridEditTextField"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:hint="GST No " />

                <EditText
                    android:id="@+id/CustomerContactno"
                    style="@style/smsGridEditTextField"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="5dp"
                    android:inputType="number"
                    android:hint="Contact No" />


                <TextView
                    android:id="@+id/btn_SaveCustomer"
                    style="@style/smsCommonButton"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="ADD"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_Update"
                    style="@style/smsCommonButton"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Update"
                    android:visibility="gone"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>